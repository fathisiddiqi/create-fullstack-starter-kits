{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./bin",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["bin/**/*"],
  "exclude": ["templates/**/*", "node_modules/**/*"]
}
